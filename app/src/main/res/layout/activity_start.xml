<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool.zooom.StartActivity"
    android:background="#04062e">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_startingPoint"
        android:layout_marginLeft="36dp"
        android:minHeight="40dp"
        android:background="#ffffff"
        android:hint="Starting point"
        android:textSize="25dp"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_destination"
        android:layout_below="@+id/editText_startingPoint"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:minHeight="40dp"
        android:layout_alignEnd="@+id/editText_startingPoint"
        android:layout_alignStart="@+id/editText_startingPoint"
        android:hint="Destination"
        android:textSize="25dp"
        android:padding="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/button_go_search"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zooom"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:textSize="55dp"
        android:textStyle="normal|italic"
        android:textColor="#ffffff" />

</RelativeLayout>
