<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cool.zooom.StartActivity"
    android:background="#04062e">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_startingPoint"
        android:layout_marginLeft="36dp"
        android:minHeight="40dp"
        android:background="#ffffff"
        android:hint="Starting point"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:lines="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_destination"
        android:layout_below="@+id/editText_startingPoint"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:minHeight="40dp"
        android:layout_alignEnd="@+id/editText_startingPoint"
        android:layout_alignStart="@+id/editText_startingPoint"
        android:hint="Destination"
        android:textSize="25dp"
        android:padding="15dp"
        android:lines="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/button_go_search"
        android:textSize="30dp"
        android:textColor="#04062e"
        android:onClick="onClickButtonGo"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zooom"
        android:id="@+id/textView"
        android:layout_marginTop="56dp"
        android:textSize="55dp"
        android:textStyle="normal|italic"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText_destination"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost"
        android:id="@+id/textView2"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textSize="23sp" />

</RelativeLayout>
